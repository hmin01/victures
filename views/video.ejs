<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Victures</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Bootstrap -->
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Fontawesome -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/fontawesome/css/all.min.css">
        <!-- Public -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
        <!-- Local -->
        <style type="text/css">
            #video-list {
                padding-left: 16px;
                padding-right: 16px;
            }
            .video-card {
                border: 1px solid #E7EAEC;
                border-radius: 0.625rem;
                margin-bottom: 1.625rem;
            }
            .video-thumbnail-form {
                position: relative;
            }
            .video-thumbnail {
                background-repeat: no-repeat;
                border-top-left-radius: 0.625rem;
                border-top-right-radius: 0.625rem;
                width: 100%;
            }
            .video-tools {
                display: none;
                background-color: rgba(255, 255, 255, 0.82);
                color: #212223;
                bottom: 0;
                margin-left: auto;
                padding: 0.625rem 1.125rem;
                position: absolute;
                width: 100%;
            }
            .video-tools .video-tools-item {
                color: #F28705;
                cursor: pointer;
                flex: 1;
                text-align: center;
            }
            .video-thumbnail-form:hover .video-tools {
                align-items: center;
                display: flex;
                justify-content: center;
            }
            .video-content {
                padding: 0.875rem 1.375rem;
            }
            .video-content > .video-title {
                font-size: 15px;
                font-weight: 600;
                margin-bottom: 0.5625rem;
                overflow-x: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
            .video-content-detail {
                display: flex;
            }
            .video-content-detail > .video-reg-date,
            .video-content-detail > .video-views {
                display: inline-block;
                flex: 1;
                margin-bottom: 0;
            }
            .video-content-detail > .video-views {
                text-align: right;
            }
        </style>
    </head>
    <body>
        <section>
            <article class="container-xl">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/video">Victure</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/video">List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/convert">Convert</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Coming soon</a>
                            </li>
                        </ul>
                        <form class="form-search my-2 my-lg-0">
                            <input class="basis-input input-sm input-rounded-sm search-input" type="search" placeholder="Search" aria-label="Search" />
                            <span class="search-icon"><i class="fas fa-search"></i></span>
                        </form>
                    </div>
                </nav>
            </article>
            <article class="container-xl">
                <div class="row" id="video-list">

                    <div class="col-xl-4 col-sm-6">
                        <div class="video-card shadow-sm">
                            <div class="video-thumbnail-form">
                                <img class="video-thumbnail" src="/thumbnail/test.png" />
                                <div class="video-tools">
                                    <span class="video-tools-item btn-video"><i class="far fa-play-circle fa-2x"></i></span>
                                    <span class="video-tools-item btn-picture"><i class="far fa-image fa-2x"></i></span>
                                </div>
                            </div>
                            <div class="video-content">
                                <h5 class="video-title" title="네고왕">네고왕</h5>
                                <div class="video-content-detail">
                                    <p class="video-reg-date">2주 전</p>
                                    <p class="video-views">view <small>1,000+</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </article>
        </section>

        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-1.12.4.min.js" type="text/javascript"></script>
        <!-- Bootstrap -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" type="text/javascript"></script>
        <!-- Popper -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" type="text/javascript"></script>
        <!-- Local -->
        <script>
            $(document).ready(() => {
                // Test
                const testVideo = {
                    url: "/thumbnail/test.png",
                    title: "네고왕",
                    regDate: "2주 전",
                    views: "1,000+"
                }
                for (let i=0; i<20; i++) {
                    createVideoItem(testVideo);
                }
            });

            function createVideoItem(elem) {
                const item = `<div class="col-xl-4 col-sm-6">
                                <div class="video-card shadow-sm">
                                    <div class="video-thumbnail-form">
                                        <img class="video-thumbnail" src="${elem.url}" />
                                        <div class="video-tools">
                                            <span class="video-tools-item btn-video"><i class="far fa-play-circle fa-2x"></i></span>
                                            <span class="video-tools-item btn-picture"><i class="far fa-image fa-2x"></i></span>
                                        </div>
                                    </div>
                                    <div class="video-content">
                                        <h5 class="video-title" title="${elem.title}">${elem.title}</h5>
                                        <div class="video-content-detail">
                                            <p class="video-reg-date">${elem.regDate}</p>
                                            <p class="video-views">view <small>${elem.views}</small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>`;

                $('#video-list').append(item);
            }
        </script>
    </body>
</html>