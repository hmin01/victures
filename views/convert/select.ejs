            // Test
            processingStep(1, "processing", "Testing 1...");
            setTimeout(function() {
                processingStep(1, "success", "Success to test 1");
                processingStep(2, "processing", "Testing 2...");

                setTimeout(function() {
                    processingStep(2, "success", "Success to test 2");
                    processingStep(3, "processing", "Downlaoding video...");
                    
                    $.ajax({
                        type: "POST",
                        url: "/convert/step/download",
